package jumpstart;

import com.itextpdf.kernel.pdf.PdfDocument;
import com.itextpdf.kernel.pdf.PdfReader;
import com.itextpdf.kernel.pdf.PdfWriter;

import com.itextpdf.kernel.font.PdfFont;
import com.itextpdf.kernel.font.PdfFontFactory;
import com.itextpdf.io.font.FontProgram;
import com.itextpdf.io.font.FontProgramFactory;
import com.itextpdf.io.font.PdfEncodings;

import com.itextpdf.layout.Document;
import com.itextpdf.layout.element.Paragraph;
import com.itextpdf.layout.property.TextAlignment;
import java.io.File;

public class Transcript {
    public static final String DEST = "results/chapter01/test.pdf";
    public static final String SRC = "results/chapter01/transcript_template.pdf";
    public static void main(String[] args) throws Exception {
        File file = new File(DEST);
        file.getParentFile().mkdirs();
        new Transcript().manipulatePdf(DEST);
    }

    protected void manipulatePdf(String dest) throws Exception {
    	FontProgram fontProgram = FontProgramFactory.createFont("resources/fonts/calibri.ttf");
    	PdfFont font = PdfFontFactory.createFont(fontProgram, PdfEncodings.WINANSI, true);
    	
    	float offset = (float) 13.9;
    	
        PdfDocument pdfDoc = new PdfDocument(new PdfReader(SRC), new PdfWriter(DEST));
        Document doc = new Document(pdfDoc);
        doc.showTextAligned(new Paragraph().setFont(font).setFontSize(11).add("IB Economics HL"), (float) 42.76, (float) 525, TextAlignment.LEFT);
        doc.showTextAligned(new Paragraph().setFont(font).setFontSize(11).add("IB Economics HL"), (float) 42.76, (float) 525 - offset, TextAlignment.LEFT);
        doc.showTextAligned(new Paragraph().setFont(font).setFontSize(11).add("IB Economics HL"), (float) 42.76, (float) 525 - 2 * offset, TextAlignment.LEFT);
        doc.showTextAligned(new Paragraph().setFont(font).setFontSize(11).add("IB Economics HL"), (float) 42.76, (float) 525 - 3 * offset, TextAlignment.LEFT);
        doc.showTextAligned(new Paragraph().setFont(font).setFontSize(11).add("IB Economics HL"), (float) 42.76, (float) 525 - 4 * offset, TextAlignment.LEFT);
        doc.showTextAligned(new Paragraph().setFont(font).setFontSize(11).add("IB Economics HL"), (float) 42.76, (float) 525 - 5 * offset, TextAlignment.LEFT);
        doc.showTextAligned(new Paragraph().setFont(font).setFontSize(11).add("IB Economics HL"), (float) 42.76, (float) 525 - 6 * offset, TextAlignment.LEFT);
        doc.showTextAligned(new Paragraph().setFont(font).setFontSize(11).add("IB Economics HL"), (float) 42.76, (float) 525 - 7 * offset, TextAlignment.LEFT);
        doc.showTextAligned(new Paragraph().setFont(font).setFontSize(11).add("IB Economics HL"), (float) 42.76, (float) 525 - 7 * offset, TextAlignment.LEFT);

        doc.close();
    }
}

